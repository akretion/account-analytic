<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customers Invoices -->
    <record id="invoice_form" model="ir.ui.view">
        <field name="name">invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="(//field[@name='user_id']/../field)[last()]" position="after">
                <field name="account_analytic_id" attrs="{'invisible': [('common_analytic_account', '=', False)]}"/>
                <field name="analytic_tag_ids" attrs="{'invisible': [('common_analytic_account', '=', False)]}" groups="analytic.group_analytic_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
            <xpath expr="(//page[@name='other_info']/group/group[2]/field)[last()]" position="after">
                <field name="common_analytic_account"/>
            </xpath>
        </field>
    </record>
    <!-- Vendors Bills -->
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">invoice.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="(//field[@name='partner_bank_id']/../field)[last()]" position="after">
                <field name="account_analytic_id" attrs="{'invisible': [('common_analytic_account', '=', False)]}"/>
                <field name="analytic_tag_ids" attrs="{'invisible': [('common_analytic_account', '=', False)]}" groups="analytic.group_analytic_tags" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
            <xpath expr="(//page[@name='other_info']/group/group[2]/field)[last()]" position="after">
                <field name="common_analytic_account"/>
            </xpath>
        </field>
    </record>
</odoo>
